  plusBtns.forEach(btn => {
    btn.addEventListener("click", () => {
      quantidade++;
      atualizarValores();
    });
  });

  minusBtns.forEach(btn => {
    btn.addEventListener("click", () => {
      if (quantidade > 0) {
        quantidade--;
        atualizarValores();
      }
    });
  });

